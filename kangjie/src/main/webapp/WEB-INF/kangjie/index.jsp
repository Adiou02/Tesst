<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!doctype html>
<html lang="en" class="fullscreen-bg">

<head>
	<title>Login | Klorofil - Free Bootstrap Dashboard Template</title>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
	<!-- VENDOR CSS -->
	<link rel="stylesheet" href="css/bootstrap.min.css">
	<!-- MAIN CSS -->
	<link rel="stylesheet" href="css/main.css">
	<link rel="apple-touch-icon" sizes="76x76" href="img/logo.png">
	<link rel="icon" type="image/png" sizes="96x96" href="img/logo.png">
	<!-- FOR DEMO PURPOSES ONLY. You should remove this in your project -->
</head>

<body>
	<!-- WRAPPER -->
	<div id="wrapper" >
		<div class="vertical-align-wrap">
			<div class="vertical-align-middle">
				<div class="auth-box ">
					<div class="right">
						<div class="content">
							<div class="header">
								<div style="margin-top: 20%;">
									<p class="lead">账号登录</p>
								</div>
							</div>
							<form class="form-auth-small" action="index.do">
								<div class="form-group">
									<input type="text" class="form-control" id="signin-email"  placeholder="请输入账号">
								</div>
								<div class="form-group" style="margin-top: 10%;">
									<input type="password" class="form-control" id="signin-password" placeholder="请输入密码">
								</div>
								<button type="submit" style="
									margin-top:10%;
									width:100%;
									height:49px;
									background:linear-gradient(-90deg,rgba(10,123,247,1) 0%,rgba(90,162,240,1) 100%);
									border-radius:5px;"><p style="color: white;">登录</p></button>
							</form>
						</div>
					</div>
					<div class="left">
						<div class="k_logo"></div>
						<div class="k_logo_text">康捷医疗</div>
						<div class="k_logo_line"></div>
						<div class="k_logo_foot">康捷医疗客服管理平台</div>
						<div class="overlay"/>
						<div class="content text"/>
					</div>
					<div class="clearfix"></div>
				</div>
			</div>
		</div>
	</div>
	<!-- END WRAPPER -->
</body>

</html>
